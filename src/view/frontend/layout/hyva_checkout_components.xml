<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_modal"/>
    <body>
        <referenceBlock name="checkout.shipping.methods">
            <block name="checkout.shipping.method.inpostlocker_standard"
                   as="inpostlocker_standard"
                   template="Snowdog_HyvaCheckoutInpost::locker.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        Snowdog\Hyva\Checkout\Inpost\Magewire\Locker
                    </argument>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="src" xsi:type="string">Smartmage_Inpost::images/inpost_paczkomat_logo.png</item>
                            <item name="attributes" xsi:type="array">
                                <item name="width" xsi:type="number">120</item>
                                <item name="alt" xsi:type="string" translate="true">Inpost logo</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
            <block name="checkout.shipping.method.inpostlocker_standardcod"
                   as="inpostlocker_standardcod"
                   template="Snowdog_HyvaCheckoutInpost::inpostlocker-standardcod/locker.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        Snowdog\Hyva\Checkout\Inpost\Magewire\Locker
                    </argument>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="src" xsi:type="string">Smartmage_Inpost::images/inpost_paczkomat_logo.png</item>
                            <item name="attributes" xsi:type="array">
                                <item name="width" xsi:type="number">120</item>
                                <item name="loading" xsi:type="string">lazy</item>
                                <item name="alt" xsi:type="string" translate="true">Inpost logo</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="checkout.shipping.section">
            <block
                name="checkout.shipping.method.inpostlocker.init"
                template="Snowdog_HyvaCheckoutInpost::geowidget-modal.phtml"
            >
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Snowdog\Hyva\Checkout\Inpost\Magewire\Locker
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="magewire.plugin.scripts">
            <block
                name="checkout.shipping.method.inpostlocker_standard.script"
                template="Snowdog_HyvaCheckoutInpost::locker-js.phtml"
            >
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        Snowdog\Hyva\Checkout\Inpost\Magewire\Locker
                    </argument>
                </arguments>
            </block>
            <block
                name="checkout.shipping.method.inpostlocker_standardcod.script"
                template="Snowdog_HyvaCheckoutInpost::locker-js.phtml"
            >
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        Snowdog\Hyva\Checkout\Inpost\Magewire\Locker
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
