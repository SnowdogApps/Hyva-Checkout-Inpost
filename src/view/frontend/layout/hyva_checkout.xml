        <block
            name="hyva-checkout.snowdog.inpost.geowidget"
            after="-"
            template="Snowdog_HyvaCheckoutInpost::geowidget-script.phtml"
            ifconfig="carriers/inpostlocker/active"
        >
            <arguments>
                <argument name="view_model" xsi:type="object">
                    Snowdog\Hyva\Checkout\Inpost\Magewire\Locker
                </argument>
            </arguments>
        </block>
    </referenceContainer>
</page>
